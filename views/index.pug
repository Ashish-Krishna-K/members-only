doctype html 
html(lang="en")
  head 
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title The Strawhats
    link(rel="stylesheet", href="/styles/style.css")
  body
    if currentUser 
      h1 Welcome, #{currentUser.username}
      a(href="/user/logout") Logout
      a(href="/message/create") Create Message
    else 
      a(href="/user/login") LogIn 
      a(href="/user/signup") Sign Up  
    block content
      if message_list 
        ul 
          for message in message_list  
            li 
              h3 #{message.title}
              if message.message 
                p #{message.message}
              if currentUser  
                if currentUser.member 
                  p #{message.author}
                  p #{message.timestamp}