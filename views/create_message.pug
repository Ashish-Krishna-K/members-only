extends index 

block content 
  h2 #{title}
  if currentUser
    form(action="", method="post") 
      label(for="title") 
      input#title(type="text", name="title" required="true" value=(undefined===message ? '' : message.title))
      label(for="message-body")
      textarea#message-body(name="message_body") #{undefined===message ? '' : message.message_body} 
      input(type="hidden", name="author" value=(currentUser._id))
      button(type="submit") Submit
    if errors 
      for error in errors 
        li #{error.msg}
  else 
    p You have to login to create a new message.