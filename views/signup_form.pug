extends index

block content

  h2 #{title} 
  form(action="", method="post") 
    label(for="username") Username*: 
    input#username(type="text", name="username" required="true" value=(undefined===user ? '' : user.username)) 
    label(for="email") Email id*:
    input#email(type="email", name="email" required="true" value=(undefined===user ? '' : user.email)) 
    label(for="password") Password: 
    input#password(type="password", name="password" required="true") 
    label(for="confirm-pass") Confirm Password: 
    input#confirm-pass(type="password", name="confirm_password" required="true")
    button(type="submit") Submit
  if errors
    ul 
      for error in errors 
        li #{error.msg} at #{error.param} 
