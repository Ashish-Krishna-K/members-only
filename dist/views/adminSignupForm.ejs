<%- include('./header.ejs') %>
<main class="admin-signup-page">
  <h2>
    <%= title %>
  </h2>
  <form action="" method="post">
    <caption>
      <em>* required</em>
    </caption>
    <div class="passphrase-input">
      <label for="passphrase">Enter the secret Passphrase to become an Admin!*</label>
      <% if (typeof errors !== "undefined") { %>
      <% errors.forEach(error => { %>
      <% if (error.path === "passphrase") { %>
      <span class="error">
        <%= error.msg %>
      </span>
      <% } %>
      <% }) %>
      <% } %>
      <input type="text" id="passphrase" name="passphrase" required="true">
    </div>
    <div class="controls">
      <button type="submit">Submit</button>
      <button type="reset">Clear</button>
      <button type="button" onclick="location.href='/'">Cancel</button>
    </div>
  </form>
</main>
<%- include('./footer.ejs') %>